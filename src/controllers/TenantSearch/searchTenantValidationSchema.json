{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.tenant.search"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "filters": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "description": "Name of the tenant"
            },
            "is_active": {
              "type": "boolean",
              "description": "Status of the tenant"
            },
            "status": {
              "type": "string",
              "enum": ["draft", "live"],
              "description": "Current status of the tenant"
            }
          },
          "additionalProperties": true
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "number",
          "minimum": 0
        }
      },
      "additionalProperties": true
    }
  },
  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
