{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.skill.update"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "name": {
          "type": "object",
          "properties": {
            "en": { "type": "string" }
          },
          "required": ["en"],
          "minProperties": 1,
          "additionalProperties": {
            "type": "string"
          },
          "description": "Multilingual skill name object, 'en' is required"
        },
        "description": {
          "type": "string",
          "description": "Short description of the skill"
        },
        "type": {
          "type": "string",
          "enum": ["l1_skill", "l2_skill", "l3_skill"],
          "description": "Skill type (l1, l2, or l3)"
        }
      },
      "required": ["name", "type"],
      "additionalProperties": false
    }
  },
  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
