{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.master.search"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "entityType": {
          "type": "string",
          "enum": ["skill", "subskill", "role", "class", "board"]
        },
        "filters": {
          "type": "object",
          "properties": {
            "name": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "Name of the entity"
              },
              "description": "Name of the entity"
            },
            "is_active": {
              "type": "array",
              "items": {
                "type": "boolean",
                "description": "status of the entity"
              },
              "description": "Status of the entity"
            },
            "status": {
              "type": "array",
              "items": {
                "type": "string",
                "description": "status of the entity",
                "enum": ["draft", "live"]
              },
              "description": "Current status of the entity"
            }
          },
          "additionalProperties": false
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["entityType", "filters"],
      "additionalProperties": false
    }
  },
  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
