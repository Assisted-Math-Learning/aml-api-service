{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.skillTaxonomy.search"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string",
      "description": "Timestamp of the request"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string",
          "description": "Message ID for tracking"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "filters": {
          "type": "object",
          "properties": {
            "l1_skill": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              },
              "description": "Filter by level 1 skill"
            },
            "l2_skill": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              },
              "description": "Filter by level 2 skill"
            },
            "l3_skill": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  }
                },
                "additionalProperties": true
              },
              "description": "Filter by level 3 skill"
            }
          },
          "additionalProperties": false
        },
        "limit": {
          "type": "integer",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "integer",
          "minimum": 0
        }
      },
      "required": ["filters"],
      "additionalProperties": false
    }
  },
  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
