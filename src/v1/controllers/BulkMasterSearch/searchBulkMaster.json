{
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "enum": ["api.bulk.search"]
    },
    "ver": {
      "type": "string"
    },
    "ts": {
      "type": "string"
    },
    "params": {
      "type": "object",
      "properties": {
        "msgid": {
          "type": "string"
        }
      },
      "required": ["msgid"],
      "additionalProperties": false
    },
    "request": {
      "type": "object",
      "properties": {
        "entityType": {
          "type": "string",
          "enum": ["skill", "subskill", "role", "class", "board"]
        },
        "filters": {
          "type": "object",
          "description": "Object containing search criteria."
        },
        "limit": {
          "type": "number",
          "minimum": 1,
          "maximum": 100
        },
        "offset": {
          "type": "number",
          "minimum": 0
        }
      },
      "required": ["entityType", "filters"],
      "additionalProperties": false
    }
  },
  "required": ["id", "ver", "ts", "params", "request"],
  "additionalProperties": false
}
